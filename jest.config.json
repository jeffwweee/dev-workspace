{
  "testEnvironment": "node",
  "testMatch": ["**/tests/**/*.test.{js,cjs}", "**/lib/__tests__/**/*.test.ts"],
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", { "useESM": true }]
  },
  "moduleFileExtensions": ["js", "cjs", "ts"],
  "testPathIgnorePatterns": ["/node_modules/"],
  "extensionsToTreatAsEsm": [".ts"]
}
